
@model Thread

<link rel="stylesheet" href="~/css/ThreadStyle.css" asp-append-version="true" />

<div class="container mt-5">
    @if (Model != null)
    {
        <div id="displayPost">
            <!-- Thread title -->
            <h1 class="thread-title-current"> @Model.ThreadTitle</h1>
                
            <div class="thread-information">
                <!-- Thread information: user, category, post date, last edited date -->
                <p>
                    Posted by <b>@Model.UserCookie</b> in <b>@Model.CategoryName</b> <br/>
                    On the <b>@Model.ThreadCreatedAt</b>.
                    <!-- Display last edited date if different -->
                    @if (Model.ThreadCreatedAt != Model.ThreadLastEditedAt)
                    {
                        <i> Last edited: @Model.ThreadLastEditedAt </i>
                    }
                </p>
                <hr/>
                    <p>@Model.ThreadBody</p>
                
            </div>
        </div>
    }
    else
    {
        <p>The requested thread was not found.</p>
    }
</div>